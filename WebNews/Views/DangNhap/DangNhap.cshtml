                                    <li><button class="twitter" tabindex="0" type="button"><span><i class="ti-twitter"></i></span></button></li>
                                    <li><button class="linkedin" tabindex="0" type="button"><span><i class="ti-linkedin"></i></span></button></li>
                                </ul>
                                <p class="subText">Bạn chưa có tài khoản? <a href="/DangNhap/DangKi">Đăng kí mới</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- All JavaScript files
    ================================================== -->
    <script src="~/Assets/js/jquery.min.js"></script>
    <script src="~/Assets/js/bootstrap.bundle.min.js"></script>
    <!-- Plugins for this template -->
    <script src="~/Assets/js/modernizr.custom.js"></script>
    <script src="~/Assets/js/jquery-plugin-collection.js"></script>
    <!-- Custom script for this template -->
    <script src="~/Assets/js/script.js"></script>

    <!-- Thông báo popup SweetAlert -->
    <script>
        $(document).ready(function () {
            var sweetMessage = '@Html.Raw(TempData["SweetMessage"])';

            if (sweetMessage) {
                var parts = sweetMessage.split('|');
                var type = parts[0];
                var message = parts[1];

                if (type === 'Success') {
                    Swal.fire({
                        icon: 'success',
                        title: 'Thành công',
                        text: message,
                    });
                } else if (type === 'Error') {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi',
                        text: message,
                    });
                } else if (type === 'Warning') {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Cảnh báo',
                        text: message,
                    });
                } else if (type === 'Info') {
                    Swal.fire({
                        icon: 'info',
                        title: 'Thông tin',
                        text: message,
                    });
                }
            }
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
            var toastMessage = "@Html.Raw(TempData["ToastMessage"])";
            if (toastMessage !== "") {
                var parts = toastMessage.split("|");
                var type = parts[0];
                var message = parts[1];

                switch (type) {
                    case "Success":
                        toastr.success(message, 'Thành Công');
                        break;
                    case "Error":
                        toastr.error(message, 'Thất Bại');
                        break;
                    case "Warning":
                        toastr.warning(message, 'Cảnh Bảo');
                        break;
                    case "Info":
                        toastr.info(message, 'Thông Tin');
                        break;
                    default:
                        toastr.success(message, 'Thành Công');
                }
            }
        });
    </script>
    <!-- #endregion -->

</body>

</html>
